<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.comas.foodies.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_recipe"
            app:destination="@id/recipeFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.comas.foodies.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.comas.foodies.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/recipeFragment"
        android:name="com.comas.foodies.RecipeFragment"
        android:label="recipe_fragment"
        tools:layout="@layout/recipe_fragment" >
        <argument
            android:name="recipe_id"
            app:argType="string" />
    </fragment>
</navigation>