<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.comas.foodies.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_recipeDetails"
            app:destination="@id/recipeDetailsFragment" />
        <action
            android:id="@+id/action_home_to_recipeCreate"
            app:destination="@id/recipeCreateFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.comas.foodies.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.comas.foodies.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/recipeFragment"
        android:name="com.comas.foodies.ui.recipe.RecipeFragment"
        android:label="recipe_fragment"
        tools:layout="@layout/recipe_fragment" />
    <fragment
        android:id="@+id/recipeDetailsFragment"
        android:name="com.comas.foodies.ui.recipe.RecipeDetailsFragment"
        android:label="fragment_recipe_details"
        tools:layout="@layout/fragment_recipe_create" >
        <argument
            android:name="recipe_id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/recipeCreateFragment"
        android:name="com.comas.foodies.ui.recipe.RecipeCreateFragment"
        android:label="fragment_recipe_create"
        tools:layout="@layout/fragment_recipe_create" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.comas.foodies.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />
</navigation>